{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todos los posts</h1>

    <table>
        <thead>
            <tr>
                <th>Texto</th>
                <th>Usuario</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.texto }}</td>
                <td>{{ post.usuario.username }}</td>
                <td>{% if post.fecha %}{{ post.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comentario_new', { 'post': post.id }) }}">Comentar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Crear un nuevo Post</a>
        </li>
    </ul>
{% endblock %}
